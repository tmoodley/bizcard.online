@model bizcard.online.Models.ApplicationUser
@{
    ViewBag.Title = "Tyrone Moodley";
} 
<div class="jumbotron">
    <div class="container"> 
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="row businesscard">
                    <div class="row">
                        <div class="col-lg-6 col-xs-0"></div>
                        <div class="col-lg-6 col-xs-12"><img src="~/images/@Model.ImageName" /></div>
                    </div>
                    <div class="row">
                        <div class="pull-left col-sm-6">
                            <div id="Name">
                                @Model.FirstName @Model.LastName
                            </div>
                            <div id="Title">
                                @Model.Title
                            </div>
                        </div>
                        <div class="pull-left col-sm-6">
                            <div id="info">
                                @Model.Address1, @Model.Address2<br />
                                @Model.City, @Model.State @Model.PostalCode<br />
                                Direct:  @Model.DirectNumber<br />
                                Office:  @Model.BusinessNumber<br />
                                Fax:     @Model.FaxNumber<br />
                                Cell:    @Model.PhoneNumber<br />
                                Email:   @Model.Email<br />
                                Website: @Model.Website<br />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

