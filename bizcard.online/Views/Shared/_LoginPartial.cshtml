@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="navbar-right" style="list-style: none;">
        <li class="dropdown">
            <a href="#" id="userDropdown" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i>&nbsp;Admin <b class="caret"></b></a>
            <ul class="dropdown-menu" role="menu" aria-labelledby="userDropdown">
                <li>@Html.ActionLink("Manage", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a> </li>
                <li class="divider"></li>
                <li><a href="/Admin">Dashboard</a></li>
            </ul>
        </li>
    </ul>
    }
}
else if (Session["Username"] != null)
{
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <a><i class="fa fa-phone"></i> Call Us : +880 111-111-111</a>
        <i class="fa fa-edit"></i>
        @Html.ActionLink("Hello " + Session["Username"] + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        <i class="fa fa-sign-in"></i>
        @Html.ActionLink("Log out", "LogOff", "Login", routeValues: null, htmlAttributes: new { id = "loginLink" }) 
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <a><i class="fa fa-phone"></i> Call Us : +1 647-444-0805</a>
        <i class="fa fa-edit"></i>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" }) 
        <i class="fa fa-sign-in"></i>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })  

    </ul>
}
